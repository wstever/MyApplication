<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:background="#000000">

        <ImageButton
            android:id="@+id/ib_pwd_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sub_title_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_toRightOf="@id/ib_pwd_back"
            android:text="密码盒子"
            android:textColor="#d35117"
            android:textSize="30sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_pwd"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/rl_title"
        android:layout_centerInParent="true"
        android:layout_margin="2dp"
        android:src="@drawable/code" />

    <RelativeLayout
        android:id="@+id/rlrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_pwd"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/lock"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/lock"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/unlock"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/lock_pressed"
            android:scaleType="fitXY" />

        <EditText
            android:id="@+id/et"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/lock"
            android:ems="4"
            android:singleLine="true"
            android:textSize="40sp">

            <requestFocus />
        </EditText>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlrl"
        android:orientation="horizontal"
        android:textSize="42sp">

        <Button
            android:id="@+id/bt_1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="1"
            android:textColor="@color/color_2"
            android:textSize="42sp" />

        <Button
            android:id="@+id/bt_2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="2"
            android:textColor="@color/color_2"
            android:textSize="42sp" />

        <Button
            android:id="@+id/bt_3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="3"
            android:textColor="@color/color_2"
            android:textSize="42sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll1"
        android:orientation="horizontal"
        android:textSize="42sp">

        <Button
            android:id="@+id/bt_4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="4"
            android:textColor="@color/color_2"
            android:textSize="42sp" />

        <Button
            android:id="@+id/bt_5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="5"
            android:textColor="@color/color_2"
            android:textSize="42sp" />

        <Button
            android:id="@+id/bt_6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="6"
            android:textColor="@color/color_2"
            android:textSize="42sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll2"
        android:orientation="horizontal"
        android:textSize="42sp">

        <Button
            android:id="@+id/bt_7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="7"
            android:textColor="@color/color_2"
            android:textSize="42sp" />

        <Button
            android:id="@+id/bt_8"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="8"
            android:textColor="@color/color_2"
            android:textSize="42sp" />

        <Button
            android:id="@+id/bt_9"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="9"
            android:textColor="@color/color_2"
            android:textSize="42sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll3"
        android:orientation="horizontal"
        android:textSize="42sp">

        <Button
            android:id="@+id/rollback"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="15dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="撤销"
            android:textColor="@color/color_2"
            android:textSize="35sp" />

        <Button
            android:id="@+id/bt_0"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="15dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="0"
            android:textColor="@color/color_2"
            android:textSize="42sp" />

        <Button
            android:id="@+id/complete"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="15dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="完成"
            android:textColor="@color/color_2"
            android:textSize="35sp" />
    </LinearLayout>

</RelativeLayout>